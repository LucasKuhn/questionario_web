<% candidato = CandidatosController.candidato %>
<h2>Candidato <%= candidato.nome %></h2>
<h4 class="font-weight-light">Inscrição: <%= candidato.inscricao %></h4>
<hr class="mt-0">

<table class="table table-hover table-border-bottom mt-4">
  <tbody>
    <tr>
    <th>Nome</th>
    <td><%= candidato.nome %></td>
    </tr>
    <tr>
    <th>Usuario</th>
    <td><%= candidato.usuario %></td>
    </tr>
    <tr>
    <th>Endereco</th>
    <td><%= candidato.endereco %></td>
    </tr>
    <tr>
    <th>Cidade</th>
    <td><%= candidato.cidade %></td>
    </tr>
    <tr>
    <th>Nascimento</th>
    <td><%= candidato.nascimento %> ( <%= candidato.idade%> anos )</td>
    </tr>
  </tbody>
</table>
