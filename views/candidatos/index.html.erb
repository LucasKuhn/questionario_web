<style>
  .table thead th {
    border: 0;
  }
</style>

<div class="d-flex justify-content-between">
    <div class="p-2"><h3> Candidatos </h3></div>
    <div class="p-1">
      <div class="p-2"><a class="btn btn btn-sm btn-outline-success" href="/candidatos/new" role="button">Novo Candidato</a></div>
    </div>
</div>
<hr class="mt-0">


<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Inscrição</th>
    </tr>
  </thead>
  <tbody>
    <% CandidatosController.candidatos.each do |candidato| %>
    <tr>
      <td><%= candidato.nome %></td>
      <td><%= candidato.inscricao %></td>
    </tr>
    <% end %>
  </tbody>
</table>
