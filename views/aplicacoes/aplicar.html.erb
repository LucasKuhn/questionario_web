<% aplicacao = AplicacoesController.aplicacao %>
<% questao = aplicacao.get_question %>

<h3> Questão <%= aplicacao.respostas_enviadas %> de <%= aplicacao.total_perguntas %> </h3>

<div class="row">
  <div class="col-md-6">
    <h4 class="font-weight-light"><%= questao.texto %></h4>
  </div>
  <div class="col-md-3 text-center">
    <img src="/img/<%= questao.nome_ilustracao %>" class="img-fluid"><br>
  </div>
  <div class="col-md-3 d-flex flex-column justify-content-center">
  </div>
</div>

<hr>

<form method="post" action="/aplicacoes/<%= aplicacao.id %>/respostas" class="inline">

<div class="list-group">
<% questao.alternativas.shuffle.each do |alternativa| %>
<label class="form-check-label" for="<%= alternativa.id %>">
  <div class="list-group-item list-group-item-action">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="alternativa_id" id="<%= alternativa.id %>" value="<%= alternativa.id %>">
      <%= alternativa.texto %>
    </div>
  </div>
</label>
<% end %>
</div>

<div class="d-flex justify-content-between my-4">
  <p>
    Você ainda tem <%= aplicacao.time_remaining %> minutos
  </p>
  <ul class="pagination">
    <!-- <li class="page-item"><a class="page-link" href="#">Previous</a></li> -->
    <li class="page-item">
      <input type="submit" class="btn btn-primary" value="Next &raquo;">
    </li>
  </ul>
</div>

</form>
