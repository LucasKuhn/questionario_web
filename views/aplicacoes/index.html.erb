<style>
  .table thead th {
    border: 0;
  }
</style>

<div class="d-flex justify-content-between">
  <div class="p-2"><h3> Aplicação de testes </h3></div>
</div>
<hr class="mt-0">


<% AplicacoesController.testes.each do |teste| %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= teste.nome %></h5>

    <form method="post" action="/aplicacoes/iniciar" class="inline">
      <input type="hidden" name="teste" value="<%= teste.id %>">
      <input type="submit" class="btn btn-primary" value="Aplicar">
    </form>

  </div>
</div>

<% end %>
